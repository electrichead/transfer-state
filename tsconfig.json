  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "@transfer-state/shared-ui/header": [
        "libs/shared-ui/header/src/index.ts"
      ],
      "@transfer-state/shared-ui/data-access-environment": [
        "libs/shared-ui/data-access-environment/src/index.ts"
      ],
      "@transfer-state/main/data-access-environment": [
        "libs/main/data-access-environment/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
